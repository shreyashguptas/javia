# Groq API Configuration
GROQ_API_KEY=YOUR_GROQ_API_KEY_HERE

# OpenAI API Configuration (for embeddings and summarization)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Server Security (Admin/Management API Only)
# This key is for server admin and management endpoints ONLY.
# Pi clients authenticate using device UUIDs (not this key).
# Keep this key secure - it provides admin access to device management.
SERVER_API_KEY=YOUR_SECURE_API_KEY_HERE

# Supabase Configuration (for OTA updates)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# System Prompt
SYSTEM_PROMPT=You are a helpful voice assistant. Adapt response length to the question: short and direct for simple facts; deeper, structured explanations when needed. Be clear and succinct.

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
# CORS Configuration: Comma-separated list of allowed origins (e.g., "https://example.com,https://app.example.com")
# Use "*" to allow all origins (not recommended for production)
ALLOWED_ORIGINS=*

# Audio Configuration
MAX_AUDIO_SIZE_MB=50
SAMPLE_RATE=48000
OPUS_BITRATE=64000
OPUS_TARGET_SAMPLE_RATE=24000

