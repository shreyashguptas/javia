# Groq API Configuration
GROQ_API_KEY=YOUR_GROQ_API_KEY_HERE

# Server Security (Admin/Management API Only)
# This key is for server admin and management endpoints ONLY.
# Pi clients authenticate using device UUIDs (not this key).
# Keep this key secure - it provides admin access to device management.
SERVER_API_KEY=YOUR_SECURE_API_KEY_HERE

# Supabase Configuration (for OTA updates)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Model Configurations
WHISPER_MODEL=whisper-large-v3-turbo
LLM_MODEL=openai/gpt-oss-20b
TTS_MODEL=playai-tts
TTS_VOICE=Cheyenne-PlayAI

# System Prompt
SYSTEM_PROMPT=You are a helpful voice assistant that gives concise, factual answers. Keep responses brief and conversational, under 3 sentences.

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# Audio Configuration
MAX_AUDIO_SIZE_MB=25
SAMPLE_RATE=48000

